{
    "$comments": [
        "An example MC shell configuration file.",
        "Remove the '$' from a key to uncomment it.",
        "Currently, you need to restart to reload the config settings."
    ],
    "ui": {
        "$comments": [
            "How to show the screen"
        ],
        "$width": 100,
        "$height": 30,
        "$error-height": 4,
        "$column-separator": { "text": "  ", "color": "#000000" },
        "$line-separator": { "text": "=", "color": "#203060" },
        "$default-field-style": { "color": "#808080" },
    
        "page-active-style":      { "c": "#a0a0a0", "bg": "#a0a0a040" },
        "page-suffix-style":      { "c": "#1010ff" },
        "page-inactive-style":    { "c": "#20ffff", "bg": "#3030a040" },
        "page-scroll-style":      { "c": "#404000", "bg": "#10102038" },

        "session-active-style":   { "c": "#a0a0a0", "bg": "#20300040" },
        "session-suffix-style":   { "c": "#101060" },
        "session-inactive-style": { "c": "#20d0d0", "bg": "#10102038" },
        "session-scroll-style":   { "c": "#404000", "bg": "#10102038" }
    },
    "cmdlets": {
        "$comments": [
            "Configures cmdlets.",
            "cmdlet-path: The search path for cmdlet executables.",
            "bin-path: The search path for binary executables (equivalent to PATH).",
            "aliases: A map of a name to a command replacement."
        ],
        "$cmdlet-path": [],
        "$bin-path": [],
        "aliases": {
            ":p": "pagecontroller"
        }
    },
    "user": {
        "env": {
            "PROMPT": "{User}@{Ip} {CwdN} $ "
        }
    }
}
